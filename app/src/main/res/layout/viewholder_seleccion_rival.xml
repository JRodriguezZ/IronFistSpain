<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imagenRival"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nombreRival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text=""
            app:layout_constraintBottom_toBottomOf="@id/separador"
            app:layout_constraintEnd_toStartOf="@+id/separador" />

        <TextView
            android:id="@+id/separador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Â·"
            app:layout_constraintBottom_toBottomOf="@+id/imagenRival"
            app:layout_constraintEnd_toEndOf="@+id/imagenRival"
            app:layout_constraintStart_toStartOf="@+id/imagenRival" />

        <TextView
            android:id="@+id/puntuacionRival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text=""
            app:layout_constraintBottom_toBottomOf="@id/separador"
            app:layout_constraintStart_toEndOf="@+id/separador" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>